<div class="container">
  <div class="row">
      <div class="col">
        <%= form_with( url: '/sessions', method: :post ) do | form | %>
        <div class="form-group col-lg-6">
          <%= form.label "Email" %>
          <%= form.text_field :email, class: "form-control" %>
        </div>
        <div class="form-group col-lg-6">
          <%= form.label "Password" %>
          <%= form.password_field :password, class: "form-control" %>
        </div>
        <%= form.submit value="Login"%>
        <% end %>
      </div>
    </div>
</div>

<div class="topnav">
  <%= link_to "Home", user_path(@current_user), class: "active"%>
  <a href="/logout">Log Out</a>
  <%= link_to "Back to Itinerary", itinerary_path %>
  <%= link_to "Add New Receiver", new_receiver_path %>


  <a href="#" style="float:left"><strong>XPERIENC</strong></a>
</div>


<div style="text-align: center">
<h1><%= @itinerary.destination_name %> Itinerary</h1>
</div>

<div class="container">
  <div class="row">
      <div class="col">
        <%= form_with model: @itinerary do | form | %>

        <div>
          <%= form.label "Destination Name"%>
          <%= form.text_field :destination_name, class: "form-control" %>
        </div>

        <div>
          <%= form.label "Address" %>
          <%= form.text_field :destination_address, class: "form-control" %>
        </div>
        <br>

        <div class="form-group col-lg-6">
          <%= form.label "Receiver" %>
          <%= form.collection_select :receiver_id, @user.receivers, :id, :first_name, class: "form-control" %>
        </div>

        <br>
        <div style="text-align: center">
          <h3>Ticket Information</h3>
        </div>

        <div>
          <%= form.label "Airline" %>
          <%= form.text_field :airline, class: "form-control" %>
        </div>

        <div>
          <%= form.label "Flight Number" %>
          <%= form.text_field :flight_number, class: "form-control" %>
        </div>

        <div>
          <%= form.label "Gate Number" %>
          <%= form.text_field :gate_number, class: "form-control" %>
        </div>

        <div>
          <%= form.label "Seat Number" %>
          <%= form.text_field :seat_number, class: "form-control" %>
        </div>

        <div>
          <%= form.label "Departure Airport Code" %>
          <%= form.text_field :departure_airport_code, class: "form-control" %>
        </div>

        <div>
          <%= form.label "Departure Date" %>
          <%= form.text_field :departure_date, class: "form-control", type: "date" %>
        </div>

        <div>
          <%= form.label "Departure Flight Time" %>
          <%= form.text_field :departure_flight_time, class: "form-control", type: "time" %>
        </div>

        <div>
          <%= form.label "Return Airport Code" %>
          <%= form.text_field :return_airport_code, class: "form-control" %>
        </div>

        <div>
          <%= form.label "Return Date" %>
          <%= form.text_field :return_date, class: "form-control", type: "date"%>
        </div>

        <div>
          <%= form.label "Return Flight Time" %>
          <%= form.text_field :return_flight_time, class: "form-control", type: "time" %>
        </div>

        <br>
        <div style="text-align: center">
        <%= form.submit "Edit Itinerary", class: "btn btn-info btn-lg"%>
        </div>
        <% end %>
      </div>
    </div>
</div>

<br>
<div style="text-align: center">
  <button type="button" class="btn btn-info btn-lg"><%= link_to 'Delete Itinerary',  { action: :destroy, id: @itinerary.id }, method: :delete, data: { confirm: 'Are you sure?' } %>
</div>
<br>

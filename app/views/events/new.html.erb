<% if @event.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@event.errors.count, "error") %>
      prohibited this event from being saved:
    </h2>

    <ul>
    <% @event.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<div style="text-align: center">
<h1>Add an Event </h1>
</div>
<div class="container">
  <div class="row">
      <div class="col">
        <%= form_with model: @event do | form | %>

        <div class="form-group col-lg-6">
          <%= form.label "Name" %>
          <%= form.text_field :name, class: "form-control" %>
        </div>

        <div class="form-group col-lg-6">
          <%= form.label "Address" %>
          <%= form.text_field :address, class: "form-control" %>
        </div>

        <div class="form-group col-lg-6">
          <%= form.label "Description" %>
          <%= form.text_field :description, class: "form-control" %>
        </div>

        <div class="form-group col-lg-6">
          <%= form.label "Date" %>
          <%= form.text_field :date, class: "form-control" %>
        </div>
        <div class="form-group col-lg-6">
          <%= form.label "Time" %>
          <%= form.text_field :time, class: "form-control", type: "time" %>
        </div>
        <div class="form-group col-lg-6">
          <%= form.label "Destination" %>
          <%= form.collection_select :itinerary_id, @itineraries, :id, :destination_name, class: "form-control" %>
        </div>
        <div style="text-align: center">
        <%= form.submit "Submit", class: "btn btn-info btn-lg"%>
        </div>
        <% end %>
      </div>
    </div>
</div>
